<section class="container">
	<div class="row">
	</div><!--row -->
	<div class="col"></div>
	<div class="col-md-10" style="margin-bottom: 1rem;"></div>
	<h2 style="margin-top:2 rem;"><u>Your Search Result</u></h2>
	<table class="table table-hover table-striped table-responsive", 
	style="border-bottom: 1px solid #ddd;">
		<thead>

		</thead>

		<tbody>
			<% c = 0%>
			<% @missions.each do |mission|%>
			<tr>
				<td>
					<% if mission.picone.present?%>
                    	<%= image_tag mission.picone.url(:thumb), style: "width:100%;" %>
                  	<% else %>
                      	No Image
                	<% end %>
				</td>
				<td>
					<%= mission.boxtitle %>
				</td>
				<td>
					<%= truncate(mission.boxinfo, length: 100) %>
				</td>
				<td>
					<%= link_to 'LEARN MORE', mission %>
				</td>
			</tr>
			<% c = c + 1 %>
			<% end %>
			<h4>There are <%= c %> containing your search.</h4>
		</tbody>
	</table>
	<div class="col"></div>
</section>
